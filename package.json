{
  "name": "@gmana/utils",
  "version": "1.5.12",
  "description": "TypeScript utility functions with Tailwind CSS helpers and common JavaScript utilities",
  "keywords": [
    "gmana",
    "utils",
    "utilities",
    "javascript",
    "typescript",
    "esm",
    "library",
    "tailwind",
    "helpers"
  ],
  "homepage": "https://github.com/sun-sreng/npm-gmana-utils#readme",
  "bugs": {
    "url": "https://github.com/sun-sreng/npm-gmana-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sun-sreng/npm-gmana-utils.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/sun-sreng"
  },
  "license": "MIT",
  "author": "Sun Sreng",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rolldown -c rolldown.config.ts",
    "build:all": "bun run build && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "check": "bun run lint && bun run format:check",
    "clean": "rm -rf dist node_modules bun.lockb package-lock.json",
    "dev": "rolldown -c rolldown.dev.config.ts -w",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "prepublishOnly": "bun run build:all && bun run test",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch"
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rolldown": "^1.0.0-beta.33",
    "rolldown-plugin-dts": "^0.16.7",
    "tailwind-merge": "^3.3.1",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "tailwind-merge": ">=3.3.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
